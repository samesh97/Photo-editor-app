<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <CheckBox
            android:id="@+id/isBorderOn"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/colorAccent"
            android:text="Shadow"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/isGlowOn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/isGlowOn"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/colorAccent"
            android:gravity="center"
            android:text="Glow"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/isBorderOn"
            app:layout_constraintEnd_toStartOf="@+id/shadowAndGlowColor"
            app:layout_constraintStart_toEndOf="@+id/isBorderOn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/shadowAndGlowColor"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_color_black"
            app:layout_constraintBottom_toBottomOf="@+id/isGlowOn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/isGlowOn"
            app:layout_constraintTop_toTopOf="@+id/isGlowOn" />


        <ListView
            android:id="@+id/fontList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:alpha="0.7"
            android:background="@android:color/white"
            android:focusable="false"
            android:scrollbars="none"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/isBorderOn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>