<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/color_lay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:civ_border_color="#F1F1F1"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/is_selected"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/selected_icon"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/color_lay"
        app:layout_constraintEnd_toEndOf="@+id/color_lay"
        app:layout_constraintStart_toStartOf="@+id/color_lay"
        app:layout_constraintTop_toTopOf="@+id/color_lay" />
    </androidx.constraintlayout.widget.ConstraintLayout>