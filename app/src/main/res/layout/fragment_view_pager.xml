<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/material_dark_blue"
    tools:context=".fragments.WalkthroughPagerFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/topGreenPannel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_view_pager_image_height_150"
        android:scaleType="fitXY"
        android:src="@drawable/samplewalpaper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/fragment_view_pager_margin_16"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />


        <ImageView
            android:id="@+id/image1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/fragment_view_pager_margin_16"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/fragment_view_pager_margin_8"
            android:layout_marginTop="@dimen/fragment_view_pager_margin_32"
            app:layout_constraintBottom_toBottomOf="@+id/topGreenPannel"
            app:layout_constraintEnd_toEndOf="@+id/topGreenPannel"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="@+id/topGreenPannel"
            app:layout_constraintTop_toTopOf="@+id/topGreenPannel"
            app:layout_constraintVertical_bias="0.77" />


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="@dimen/fragment_view_pager_margin_30"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="Pick an Image"
            android:textSize="28sp"
            android:fontFamily="@font/gemunulibrebold"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/fragment_view_pager_margin_16"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="Sample Description"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/gemunulibrebold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>