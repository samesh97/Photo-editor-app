<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#114f5e"
    tools:context=".ImageSavingActivity">

    <ImageView
        android:id="@+id/topGreenPannel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_image_saving_top_image_height"
        android:scaleType="centerInside"
        android:background="@drawable/samplewalpaper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/userSavingImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_image_saving_image_height_160"
        android:layout_marginStart="@dimen/activity_image_saving_margin_32"
        android:layout_marginTop="@dimen/activity_image_saving_margin_50"
        android:layout_marginEnd="@dimen/activity_image_saving_margin_32"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/shareImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_image_saving_image_height_80"
        android:layout_marginStart="@dimen/activity_image_saving_margin_10"
        android:layout_marginTop="@dimen/activity_image_saving_margin_16"
        android:layout_marginEnd="@dimen/activity_image_saving_margin_10"
        android:background="@drawable/custom_drop_shadow_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userSavingImage" />

    <ImageView
        android:id="@+id/shareFinalImage"
        android:layout_width="@dimen/activity_image_saving_image_width_height_40"
        android:layout_height="@dimen/activity_image_saving_image_width_height_40"
        android:layout_marginStart="@dimen/activity_image_saving_margin_32"
        android:src="@drawable/share"
        app:layout_constraintBottom_toBottomOf="@+id/shareImageView"
        app:layout_constraintStart_toStartOf="@+id/shareImageView"
        app:layout_constraintTop_toTopOf="@+id/shareImageView" />


    <TextView
        android:id="@+id/fromGalery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/share_image_text"
        android:textColor="#018577"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="@font/gemunulibrebold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@+id/shareFinalImage"
        app:layout_constraintStart_toStartOf="@+id/downloadImageText"
        app:layout_constraintTop_toTopOf="@+id/shareFinalImage" />

    <ImageView
        android:id="@+id/downloadImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_image_saving_image_height_80"
        android:layout_marginStart="@dimen/activity_image_saving_margin_10"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/activity_image_saving_margin_10"
        android:background="@drawable/custom_drop_shadow_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareImageView" />

    <ImageView
        android:id="@+id/saveFinalImage"
        android:layout_width="@dimen/activity_image_saving_image_width_height_40"
        android:layout_height="@dimen/activity_image_saving_image_width_height_40"
        android:layout_marginStart="@dimen/activity_image_saving_margin_32"
        android:src="@drawable/download"
        app:layout_constraintBottom_toBottomOf="@+id/downloadImageView"
        app:layout_constraintStart_toStartOf="@+id/downloadImageView"
        app:layout_constraintTop_toBottomOf="@+id/shareImageView"
        app:layout_constraintVertical_bias="0.566" />


    <TextView
        android:id="@+id/downloadImageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_image_saving_margin_32"
        android:gravity="center"
        android:text="@string/download_image_text"
        android:textColor="#018577"
        android:textSize="22sp"
        android:fontFamily="@font/gemunulibrebold"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@+id/saveFinalImage"
        app:layout_constraintStart_toEndOf="@+id/saveFinalImage"
        app:layout_constraintTop_toTopOf="@+id/saveFinalImage" />



</androidx.constraintlayout.widget.ConstraintLayout>