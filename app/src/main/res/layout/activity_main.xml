<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="#114f5e"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#114f5e"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#114f5e"
            tools:context=".MainActivity">

            <ImageView
                android:id="@+id/topGreenPannel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:scaleType="fitXY"
                android:src="@drawable/samplewalpaper"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="@dimen/language_picker_layout_width"
                android:layout_height="@dimen/language_picker_layout_height"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_drop_shadow_drawable"
                app:layout_constraintEnd_toEndOf="@+id/topGreenPannel"
                app:layout_constraintTop_toTopOf="parent">

                <Spinner
                    android:id="@+id/languagePicker"
                    style="@style/spinner_style"
                    android:layout_width="@dimen/language_picker_width"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="2dp"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/select_language"
                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/settings_icon"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />-->


            <ImageView
                android:id="@+id/bottomWhitePannel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/white_panel_margin"
                android:background="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topGreenPannel" />

            <ImageView
                android:id="@+id/roundImage"
                android:layout_width="@dimen/logo_width"
                android:layout_height="@dimen/logo_height"
                android:src="@drawable/greenlogo"
                app:layout_constraintBottom_toBottomOf="@+id/topGreenPannel"
                app:layout_constraintEnd_toEndOf="@+id/topGreenPannel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topGreenPannel" />


            <TextView
                android:id="@+id/selectPictureText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_8"
                android:fontFamily="@font/gemunulibrebold"
                android:gravity="center"
                android:text="@string/select_an_image_text"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/select_picture_text_size"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roundImage" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pickImageFromGallery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/background_height"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_end"
                android:background="@drawable/custom_drop_shadow_drawable"
                android:onClick="showFileChooser"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectPictureText">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/image_40"
                    android:layout_height="@dimen/image_40"
                    android:layout_marginStart="@dimen/image_margin_start_24"
                    android:background="@drawable/greenborder"
                    android:onClick="showFileChooser"
                    android:src="@drawable/addimage"
                    app:layout_constraintBottom_toBottomOf="@+id/pickImageFromGallery"
                    app:layout_constraintStart_toStartOf="@+id/pickImageFromGallery"
                    app:layout_constraintTop_toTopOf="@+id/pickImageFromGallery" />


                <TextView
                    android:id="@+id/fromGalery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:fontFamily="@font/gemunulibrebold"
                    android:gravity="center"
                    android:onClick="showFileChooser"
                    android:text="@string/select_from_galery_text"
                    android:textColor="#018577"
                    android:textSize="@dimen/select_from_gallery_text_size"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:layout_constraintBottom_toBottomOf="@+id/pickImageFromGallery"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/pickImageFromGallery" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/createImageFromLibrary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/background_height"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/back_margin_top"
                android:layout_marginEnd="@dimen/margin_end"
                android:background="@drawable/custom_drop_shadow_drawable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pickImageFromGallery">


                <ImageView
                    android:id="@+id/createBitmap"
                    android:layout_width="@dimen/image_40"
                    android:layout_height="@dimen/image_40"
                    android:layout_marginStart="@dimen/image_margin_start_24"
                    android:background="@drawable/greenborder"
                    android:src="@drawable/createbitmap"
                    app:layout_constraintBottom_toBottomOf="@+id/createImageFromLibrary"
                    app:layout_constraintStart_toStartOf="@+id/createImageFromLibrary"
                    app:layout_constraintTop_toTopOf="@+id/createImageFromLibrary" />

                <TextView
                    android:id="@+id/createOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:fontFamily="@font/gemunulibrebold"
                    android:gravity="center"
                    android:text="@string/create_a_background_text"
                    android:textColor="#018577"
                    android:textSize="@dimen/select_from_gallery_text_size"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:layout_constraintBottom_toBottomOf="@+id/createBitmap"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/createBitmap"
                    app:layout_constraintTop_toTopOf="@+id/createBitmap" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pickImageFromDb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/background_height"
                android:layout_marginStart="@dimen/margin_start"
                android:layout_marginTop="@dimen/back_margin_top"
                android:layout_marginEnd="@dimen/margin_end"
                android:background="@drawable/custom_drop_shadow_drawable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/createImageFromLibrary">


                <ImageView
                    android:id="@+id/usePreviousBitmap"
                    android:layout_width="@dimen/image_40"
                    android:layout_height="@dimen/image_40"
                    android:layout_marginStart="@dimen/image_margin_start_24"
                    android:background="@drawable/greenborder"
                    android:src="@drawable/addfromimages"
                    app:layout_constraintBottom_toBottomOf="@+id/pickImageFromDb"
                    app:layout_constraintStart_toStartOf="@+id/pickImageFromDb"
                    app:layout_constraintTop_toTopOf="@+id/pickImageFromDb" />


                <TextView
                    android:id="@+id/useOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/gemunulibrebold"
                    android:gravity="center"
                    android:text="@string/select_a_background_text"
                    android:textColor="#018577"
                    android:textSize="@dimen/select_from_gallery_text_size"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:layout_constraintBottom_toBottomOf="@+id/usePreviousBitmap"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/usePreviousBitmap"
                    app:layout_constraintTop_toTopOf="@+id/usePreviousBitmap" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/verionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/gemunulibrebold"
        android:gravity="center"
        android:text="Version 1.1.7"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>